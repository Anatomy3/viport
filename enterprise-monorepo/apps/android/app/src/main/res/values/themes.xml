<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ViportAndroid" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/viport_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/viport_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/viport_on_primary_container</item>
        <item name="colorSecondary">@color/viport_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/viport_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/viport_on_secondary_container</item>
        <item name="colorTertiary">@color/viport_tertiary</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/viport_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/viport_on_tertiary_container</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>
    </style>
    
    <style name="Theme.ViportAndroid.Splash" parent="Theme.ViportAndroid">
        <item name="android:windowBackground">@color/viport_primary</item>
        <item name="android:statusBarColor">@color/viport_primary</item>
        <item name="android:navigationBarColor">@color/viport_primary</item>
    </style>
    
    <style name="Theme.ViportAndroid.NoActionBar" parent="Theme.ViportAndroid">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>