{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    ".env*",
    "package.json",
    "tsconfig.json",
    ".eslintrc.*",
    ".prettierrc*",
    "tailwind.config.*",
    "next.config.*"
  ],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_*",
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "GO_ENV",
    "JWT_SECRET",
    "CORS_ORIGINS"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "next.config.*",
        "tailwind.config.*",
        "tsconfig.json",
        "vite.config.*",
        "rollup.config.*"
      ],
      "outputs": [
        ".next/**", 
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "storybook-static/**"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc.*",
        ".eslintignore",
        "eslint.config.*"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc.*",
        ".eslintignore",
        "eslint.config.*"
      ],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": ["**/.tsbuildinfo"]
    },
    "format": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        ".prettierignore",
        "prettier.config.*"
      ],
      "cache": false
    },
    "format:check": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        ".prettierignore",
        "prettier.config.*"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "vitest.config.*",
        "playwright.config.*"
      ],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "playwright.config.*"
      ],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "vitest.config.*"
      ],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "analyze": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "next.config.*"
      ],
      "outputs": [".next/**"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".storybook/**",
        "stories/**"
      ],
      "outputs": ["storybook-static/**"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}