# =============================================================================
# VIPORT MONOREPO ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string for development
DATABASE_URL="postgresql://username:password@localhost:5432/viport_dev"

# Redis connection string for caching
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# NextAuth.js secret key (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# NextAuth.js URL for callbacks
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Google OAuth 2.0 credentials from Google Cloud Console
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# BACKEND INTEGRATION
# =============================================================================
# Go backend API URL
GO_BACKEND_URL="http://localhost:8080"

# API key for backend communication (if required)
API_SECRET_KEY="your-api-secret-key"

# =============================================================================
# UPLOAD CONFIGURATION
# =============================================================================
# UploadThing configuration for file uploads
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email service configuration (e.g., Resend, SendGrid, etc.)
EMAIL_FROM="noreply@viport.com"
EMAIL_API_KEY="your-email-service-api-key"

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Stripe configuration for payments
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Vercel Analytics (automatically configured on Vercel)
NEXT_PUBLIC_VERCEL_URL=""

# Sentry configuration for error tracking
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Environment type
NODE_ENV="development"

# Debug mode
DEBUG="viport:*"

# Log level
LOG_LEVEL="debug"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features for testing
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DARK_MODE="true"
NEXT_PUBLIC_ENABLE_PORTFOLIO_BUILDER="true"
NEXT_PUBLIC_ENABLE_MARKETPLACE="true"

# =============================================================================
# CDN & STORAGE CONFIGURATION
# =============================================================================
# AWS S3 configuration for file storage
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="viport-uploads"

# CloudFlare configuration
CLOUDFLARE_ZONE_ID="your-cloudflare-zone-id"
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================
# Instagram Basic Display API
INSTAGRAM_CLIENT_ID="your-instagram-client-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-client-secret"

# Twitter API v2
TWITTER_CLIENT_ID="your-twitter-client-id"
TWITTER_CLIENT_SECRET="your-twitter-client-secret"

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
# Elasticsearch or Algolia for search functionality
ELASTICSEARCH_URL="http://localhost:9200"
ALGOLIA_APP_ID="your-algolia-app-id"
ALGOLIA_API_KEY="your-algolia-api-key"

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# Real-time features (comments, notifications, etc.)
WS_URL="ws://localhost:8080/ws"
WS_SECRET="your-websocket-secret"

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# JWT configuration
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"