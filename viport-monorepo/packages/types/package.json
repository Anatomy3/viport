{
  "name": "@viport/types",
  "version": "1.0.0",
  "private": true,
  "description": "Shared TypeScript types for Viport applications",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "zod": "catalog:"
  },
  "devDependencies": {
    "@viport/config-eslint": "workspace:*",
    "@viport/config-typescript": "workspace:*",
    "typescript": "catalog:"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    }
  }
}