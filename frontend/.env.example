# Copy this file to .env and fill in your actual OAuth credentials

# OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
VITE_GITHUB_CLIENT_ID=your_github_client_id_here
VITE_DISCORD_CLIENT_ID=your_discord_client_id_here

# API Configuration  
VITE_API_URL=http://localhost:8080
VITE_APP_URL=http://localhost:3000

# OAuth Redirect URIs (environment-specific)
VITE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/google/callback
VITE_PRODUCTION_OAUTH_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Security Configuration
VITE_ENABLE_OAUTH_STATE_VALIDATION=true
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_LOGIN_ATTEMPTS=5

# UI Configuration
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_REMEMBER_ME=true
VITE_ENABLE_MULTI_FACTOR_AUTH=false

# Development/Production Environment
VITE_NODE_ENV=development
VITE_DEBUG_MODE=false

# Security Headers (for production deployment)
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true

# Analytics and Monitoring (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Example of what real OAuth credentials look like:
# VITE_GOOGLE_CLIENT_ID=123456789012-abcdefghijklmnopqrstuvwxyz123456.apps.googleusercontent.com
# VITE_GITHUB_CLIENT_ID=1234567890abcdef1234
# VITE_DISCORD_CLIENT_ID=123456789012345678